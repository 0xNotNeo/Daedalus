{
  "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Testbed",
            "type": "shell",
            "command": "bazel build //testbed:Testbed -c dbg",
            "windows": {
                "command": "bazel build //testbed:Testbed -c dbg --experimental_enable_runfiles "
            },        
            "osx": {
                "command": "bazel build //testbed:Testbed -c dbg --spawn_strategy=standalone"
            },
            "linux": {
                "command": "CC=clang bazel build //testbed:Testbed -c dbg"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ]
}